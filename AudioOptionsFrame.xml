		<Frames>
			<Button name="AudioOptionsFrameTab1" inherits="AudioOptionsFrameTabButtonTemplate" id="1" text="VOICE_SOUND">
                <Anchors>
                    <Anchor point="CENTER" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="45" y="-8"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
			<Button name="AudioOptionsFrameTab2" inherits="AudioOptionsFrameTabButtonTemplate" id="2" text="VOICE">
                <Anchors>
                   <Anchor point="LEFT" relativeTo="AudioOptionsFrameTab1" relativePoint="RIGHT">
                        <Offset>
                            <AbsDimension x="-16" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
		</Frames>
		<Scripts>
			<OnLoad>
				PanelTemplates_SetNumTabs(this, 2);
				PanelTemplates_SetTab(this, 1);
				this:RegisterEvent("VOICE_CHAT_ENABLED_UPDATE");
			</OnLoad>
			<OnEvent>
				if ( event == "VOICE_CHAT_ENABLED_UPDATE" ) then
					VoiceChat_Toggle();
				end
			</OnEvent>
			<OnShow>
				Disable_BagButtons();
				UpdateMicroButtons();
			</OnShow>
			<OnKeyDown>
				if ( arg1 == "ESCAPE" ) then
					PlaySound("gsTitleOptionExit");
					HideUIPanel(AudioOptionsFrame);
					SoundOptionsFrame_Cancel();
					VoiceOptionsFrame_Cancel();
				elseif ( GetBindingFromClick(arg1) == "SCREENSHOT" ) then
					RunBinding("SCREENSHOT");
				end
			</OnKeyDown>
			<OnHide>
				if ( not this.okay ) then
					SoundOptionsFrame_Cancel();
					VoiceOptionsFrame_Cancel();
				end
				this.okay = nil;
				ShowUIPanel(GameMenuFrame);
				UpdateMicroButtons();
			</OnHide>
		</Scripts>
	</Frame>
